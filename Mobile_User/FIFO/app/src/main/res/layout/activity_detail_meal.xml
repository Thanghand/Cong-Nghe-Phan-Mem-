<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/detailMealImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/layoutBottomTitle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradientbackground_profileview">

            <TextView
                android:id="@+id/detailMealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Meal Name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="italic" />
            <Button
                android:id="@+id/buttonPin"
                android:layout_width="100dp"
                android:layout_height="53dp"
                android:background="@drawable/button_login"
                android:textColor="@android:color/white"
                android:layout_below="@+id/detailMealName"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:text="Ghim"/>

            <ImageView
                android:id="@+id/iconLike"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8C000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnPrepareDescription"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:text="Giới thiệu"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btnPrepareTutorial"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:text="Chế biến"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDetailMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="italic" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
